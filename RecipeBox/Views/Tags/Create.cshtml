@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h4>Add a new tag</h4>

<p>@Html.ValidationMessageFor(model => model.Cuisine, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Cuisine)
    @Html.TextBoxFor(model => model.Cuisine)

    <input type="submit" value="Add new tag" class="btn btn-primary" />
}
<p>@Html.ActionLink("Back to Tag List", "Index")</p>